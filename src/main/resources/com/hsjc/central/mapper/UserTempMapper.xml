  <!--
    @author : zga
    @date : 2015-12-04
    通过id删除用户
  -->
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    delete from usertemp
    where id = #{id}
  </delete>

  <!--
    @author : zga
    @date : 2015-12-04
    根据id更新用户信息
  -->
  <update id="updateByPrimaryKeySelective" parameterType="UserTemp">
    update usertemp
    <set >
      <if test="username != null" >
        username = #{username},
      </if>
      <if test="password != null" >
        password = #{password},
      </if>
      <if test="salt != null" >
        salt = #{salt},
      </if>
      <if test="phone != null" >
        phone = #{phone},
      </if>
      <if test="type != null" >
        type = #{type},
      </if>
      <if test="status != null" >
        status = #{status},
      </if>
      <if test="invitatecode != null" >
        invitateCode = #{invitatecode},
      </if>
      <if test="email != null" >
        email = #{email},
      </if>
    </set>
    where id = #{id}
  </update>

  <!--
    @author : zga
    @date : 2015-12-04
    根据email更新用户状态
  -->
  <update id="updateStatusByEmial" parameterType="UserTemp">
    update usertemp
    <set>
      <if test="status != null">
        status = #{status}
      </if>
    </set>
    where email = #{email}
