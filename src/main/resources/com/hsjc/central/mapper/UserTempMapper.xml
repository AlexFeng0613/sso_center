  <!--
    @author : zga
    @date : 2015-12-04
    新增单个用户
  -->
  <insert id="insert" parameterType="UserTemp">
    insert into usertemp
    (username, password,salt,type, email)
    values (
    #{userTemp.username},
    #{userTemp.password},
    #{userTemp.salt},
    #{userTemp.type},
    #{userTemp.email}
    )
  </insert>

