  <!--
    @author : zga
    @date : 2015-12-04
    根据id查询用户信息
  -->
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select
    <include refid="Base_Column_List" />
    from usertemp
    where id = #{id}
  </select>

  <!--
    @author : zga
    @date : 2015-12-04
    根据username、phone、email查询用户
  -->
  <select id="selectByEmailOrUserNameOrPhone" resultMap="BaseResultMap" parameterType="UserTemp">
    select
    <include refid="Base_Column_List" />
    from usertemp
    where 1=1
    <if test="userTemp.email != null" >
      email = #{userTemp.email},
    </if>
    <if test="userTemp.phone != null" >
      phone = #{userTemp.phone},
    </if>
    <if test="userTemp.username != null" >
      username = #{userTemp.username},
    </if>
  </select>

